---
import members from "../config/members.json";
---

<section class="">
	<h1>Directores</h1>
	<div class="flex mt-40 bg-slate-900 gap-8 p-10">
		{
			members.map(member => (
				<div class="my-20 flex flex-col p-5 rounded-lg card">
					<div class="cover relative">
						<img src={member.image} alt="" />
						<div class="img__back" />
					</div>
					<div class="description bg-slate-800">
						<h4 class="text-center text-2xl ">{member.rol}</h4>
						<h4 class="text-center text-2xl mb-10">{member.name}</h4>
						<p class="text-center">{member.description}</p>
					</div>
				</div>
			))
		}
	</div>
</section>

<style>
	h1 {
		margin-bottom: 500px;
	}
	div {
	}

	.cover {
		width: 100%;
		height: 250px;
		overflow: hidden;
	}
	.card {
		transition: all 300ms;
	}
	.card:hover {
		transform: scale(1.1);
	}
	img {
		z-index: 20;
		position: relative;
		display: block;
		margin: auto;
		top: 40px;
		filter: drop-shadow(5px 5px 4px rgba(0, 0, 0, 0.5));
		transition: all 400ms;
	}
	.card:hover img {
		top: 0;
		filter: none;
	}
	.img__back {
		width: 100%;
		height: 180px;
		position: absolute;
		bottom: -80px;
		left: 0;
		background-size: cover;
		border-radius: 20px;
		transition: all 300ms;
		background-image: url("/images/bg1.jpg");
	}
	.card:nth-of-type(2) .img__back {
		filter: hue-rotate(200deg);
	}
	.card:nth-of-type(3) .img__back {
		filter: hue-rotate(280deg);
	}
	.card:nth-of-type(4) .img__back {
		filter: invert(100%);
	}
	.card:hover .img__back {
		bottom: -40px;
	}
	.description {
		border-radius: 0 0 20px 20px;
		padding: 40px;
		transition: all 400ms;
		margin-top: -10px;
	}
</style>
